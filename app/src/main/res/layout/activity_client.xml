<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".android.ClientActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/connectionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="92dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_wings_foreground" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="bottom|left"
            android:text="Choose Your Location"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/locationSpinner"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:textSize="18sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/connectionSwitch"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:onClick="onConnectSwitch"
            android:text="Connect"
            android:textColorLink="#AA0000"
            android:textSize="24sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/dnsSwitch"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:onClick="onDNSSwitch"
            android:text="Block Trackers"
            android:textSize="24sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accountButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="account"
            android:text="Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/skylaski_red" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLogout"
            android:text="Log Out"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:backgroundTint="@color/skylaski_red" />

        <TextView
            android:id="@+id/alertText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:enabled="false"
            android:paddingVertical="25dp"
            android:text="ALERT" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>